repeat wait() until game:IsLoaded()
wait(2)

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local StarterGui = game:GetService("StarterGui")
local LocalPlayer = Players.LocalPlayer

-- üè¥ T·ª± ƒë·ªông ch·ªçn H·∫£i T·∫∑c n·∫øu ch∆∞a c√≥ team
local function selectPirateTeam()
    if LocalPlayer.Team == nil then
        local remote = ReplicatedStorage:FindFirstChild("Remotes")
        if remote and remote:FindFirstChild("TeamSelect") then
            remote.TeamSelect:InvokeServer("Pirates")
            wait(2)
        end
    end
end

selectPirateTeam() -- Ch·∫°y ch·ªçn team ngay khi load game

-- üé® T·∫°o UI ch√≠nh
