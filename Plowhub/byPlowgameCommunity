-- Ki·ªÉm tra khi game ƒë√£ load xong
repeat wait() until game:IsLoaded()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

-- Ki·ªÉm tra xem c√≥ ph·∫£i l√† KRNL PE hay kh√¥ng
local isKRNL = pcall(function()
    return game:GetService("CoreGui"):FindFirstChild("KRNL") -- Ki·ªÉm tra xem c√≥ ƒë·ªëi t∆∞·ª£ng KRNL trong CoreGui
end)

-- Ch·∫∑n AFK
LocalPlayer.Idled:Connect(function()
    if isKRNL then
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end
end)

-- T·ª± ƒë·ªông ch·ªçn H·∫£i T·∫∑c khi v√†o game
if game.PlaceId == 2753915549 or game.PlaceId == 4442272183 or game.PlaceId == 7449423635 then
    local args = { [1] = "SetTeam", [2] = "Pirates" }
    local success, err = pcall(function()
        ReplicatedStorage.Remotes.CommF_:InvokeServer(unpack(args))
    end)
    if not success then
        print("Error when invoking SetTeam:", err)
    end
    wait(1)
    pcall(function()
        ReplicatedStorage.Remotes.CommF_:InvokeServer("TeleportToSpawn")
    end)
end

-- T·∫°o UI hi·ªÉn th·ªã tr√™n m√†n h√¨nh
local function CreateUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "PlowHubUI"
    screenGui.Parent = game.Players.LocalPlayer:FindFirstChild("PlayerGui") or game.CoreGui

    local Frame = Instance.new("Frame", screenGui)
    Frame.Size = UDim2.new(0, 320, 0, 200)  -- TƒÉng chi·ªÅu cao m·ªôt ch√∫t
    Frame.Position = UDim2.new(0.5, -160, 0.05, 0)
    Frame.BackgroundColor3 = Color3.new(0, 0, 0)
    Frame.BackgroundTransparency = 0.3
    Frame.BorderSizePixel = 2
    Frame.ClipsDescendants = true  -- ƒê·∫£m b·∫£o n·ªôi dung kh√¥ng v∆∞·ª£t ra ngo√†i Frame

    -- Ti√™u ƒë·ªÅ UI
    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.2, 0)
    Title.TextScaled = true
    Title.TextColor3 = Color3.fromRGB(173, 216, 230)
    Title.BackgroundTransparency = 1
    Title.Text = "üåê Plow Game | Community"

    -- Khung Tr·∫°ng th√°i tr√°i √°c qu·ª∑
    local StatusFrame = Instance.new("Frame", Frame)
    StatusFrame.Size = UDim2.new(0.9, 0, 0.4, 0)
    StatusFrame.Position = UDim2.new(0.05, 0, 0.3, 0)
    StatusFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    StatusFrame.BackgroundTransparency = 0.2

    -- TextLabel cho tr·∫°ng th√°i
    local StatusLabel = Instance.new("TextLabel", StatusFrame)
    StatusLabel.Size = UDim2.new(1, 0, 1, 0)
    StatusLabel.TextSize = 18
    StatusLabel.TextColor3 = Color3.new(1, 1, 1)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.TextWrapped = true  -- B·∫≠t t√≠nh nƒÉng t·ª± ƒë·ªông xu·ªëng d√≤ng
    StatusLabel.Text = "üîé ƒêang ki·ªÉm tra tr√°i √°c qu·ª∑..."

    -- FPS Counter
    local FpsLabel = Instance.new("TextLabel", Frame)
    FpsLabel.Size = UDim2.new(1, 0, 0.15, 0)
    FpsLabel.Position = UDim2.new(0, 0, 0.75, 0)
    FpsLabel.TextSize = 16
    FpsLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    FpsLabel.BackgroundTransparency = 1
    FpsLabel.Text = "FPS: 60"

    -- C·∫≠p nh·∫≠t FPS theo th·ªùi gian th·ª±c
    RunService.RenderStepped:Connect(function()
        local fps = math.floor(1 / RunService.RenderStepped:Wait())
        FpsLabel.Text = "FPS: " .. fps
    end)

    return StatusLabel
end

-- Kh·ªüi t·∫°o UI
local StatusLabel = CreateUI()

-- D·ªãch chuy·ªÉn ƒë·∫øn tr√°i
local function TeleportToPosition(position)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        LocalPlayer.Character.HumanoidRootPart.CFrame = position
    end
end

-- T√¨m & nh·∫∑t tr√°i
local function FindFruits()
    for _, fruit in pairs(game.Workspace:GetChildren()) do
        if fruit:IsA("Tool") and string.find(fruit.Name, "Fruit") then
            return fruit
        end
    end
    return nil
end

-- L∆∞u tr·ªØ tr√°i v√†o kho
local function StoreFruit(fruitName)
    local success, message = pcall(function()
        ReplicatedStorage.Remotes.CommF_:InvokeServer("StoreFruit", fruitName)
    end)
    
    if success then
        StatusLabel.Text = "‚úÖ ƒê√£ l∆∞u tr·ªØ tr√°i " .. fruitName .. "!"
    else
        StatusLabel.Text = "‚ùå Kh√¥ng th·ªÉ l∆∞u tr·ªØ tr√°i " .. fruitName .. "."
    end
end

-- Ki·ªÉm tra tr√°i √°c qu·ª∑ ƒë√£ l∆∞u v√†o r∆∞∆°ng ch∆∞a
local function IsFruitStored(fruitName)
    local success, result = pcall(function()
        return ReplicatedStorage.Remotes.CommF_:InvokeServer("GetStoredFruits") -- H√†m gi·∫£ ƒë·ªãnh l·∫•y danh s√°ch tr√°i ƒë√£ l∆∞u
    end)

    if success then
        for _, storedFruit in pairs(result) do
            if storedFruit == fruitName then
                return true
            end
        end
    end

    return false
end

-- C·∫≠p nh·∫≠t tr·∫°ng th√°i khi tr√°i ch∆∞a ƒë∆∞·ª£c l∆∞u
local function UpdateStatusForUnstoredFruit(fruit)
    local isStored = IsFruitStored(fruit.Name)
    if isStored then
        StatusLabel.Text = "‚úÖ Tr√°i " .. fruit.Name .. " ƒë√£ ƒë∆∞·ª£c l∆∞u tr·ªØ v√†o r∆∞∆°ng!"
    else
        StatusLabel.Text = "‚ùå Tr√°i " .. fruit.Name .. " ch∆∞a ƒë∆∞·ª£c l∆∞u tr·ªØ v√†o r∆∞∆°ng!"
    end
end

-- T√¨m & nh·∫∑t tr√°i, sau ƒë√≥ t·ª± ƒë·ªông Server Hop v·ªõi ƒë·∫øm ng∆∞·ª£c
while true do
    local fruit = FindFruits()
    if fruit then
        StatusLabel.Text = "üçè ƒê√£ t√¨m th·∫•y tr√°i √°c qu·ª∑!"
        TeleportToPosition(fruit.Handle.CFrame)
        wait(1)

        -- Nh·∫∑t tr√°i & l∆∞u v√†o kho
        LocalPlayer.Character.Humanoid:EquipTool(fruit)
        wait(1)
        StoreFruit(fruit.Name)
        UpdateStatusForUnstoredFruit(fruit)
    else
        StatusLabel.Text = "‚ùå Kh√¥ng c√≥ tr√°i! Chu·∫©n b·ªã chuy·ªÉn server..."
        ServerHopWithCountdown()
    end

    wait(5) -- Ch·ªù 5 gi√¢y tr∆∞·ªõc khi ki·ªÉm tra ti·∫øp
end
