repeat wait() until game:IsLoaded()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local RunService = game:GetService("RunService")

-- 🔄 Chặn AFK
LocalPlayer.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

-- 🔥 Kích hoạt NoClip (đi xuyên tường)
local NoClip = true
RunService.Stepped:Connect(function()
    if NoClip and LocalPlayer.Character then
        for _, part in pairs(LocalPlayer.Character:GetChildren()) do
            if part:IsA("BasePart") and part.CanCollide then
                part.CanCollide = false
            end
        end
    end
end)

-- 🏴 Tự chọn Hải Tặc khi vào game
if game.PlaceId == 2753915549 or game.PlaceId == 4442272183 or game.PlaceId == 7449423635 then
    local args = { [1] = "SetTeam", [2] = "Pirates" }
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
    wait(1)
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("TeleportToSpawn")
end

-- 🖥️ Tạo UI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 250, 0, 150)
Frame.Position = UDim2.new(0.5, -125, 0.05, 0)
Frame.BackgroundColor3 = Color3.new(0, 0, 0)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 2
Frame.Active = true

-- 🌟 Tiêu đề Plow Game | Community
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0.25, 0)
Title.TextScaled = true
Title.TextColor3 = Color3.fromRGB(173, 216, 230) -- Xanh dương nhạt
Title.BackgroundTransparency = 1
Title.Text = "🌐 Plow Game | Community"

-- 🌀 Tên Script
local ScriptName = Instance.new("TextLabel", Frame)
ScriptName.Size = UDim2.new(1, 0, 0.25, 0)
ScriptName.Position = UDim2.new(0, 0, 0.25, 0)
ScriptName.TextScaled = true
ScriptName.TextColor3 = Color3.new(1, 1, 1) -- Trắng
ScriptName.BackgroundTransparency = 1
ScriptName.Text = "🌀 Plow Hub - Auto Fruit"

-- 📝 Thông báo trạng thái
local StatusLabel = Instance.new("TextLabel", Frame)
StatusLabel.Size = UDim2.new(1, 0, 0.3, 0)
StatusLabel.Position = UDim2.new(0, 0, 0.5, 0)
StatusLabel.TextScaled = true
StatusLabel.TextColor3 = Color3.new(1, 1, 1)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "🔎 Đang kiểm tra trái ác quỷ..."

-- 🚀 Trạng thái NoClip
local NoClipLabel = Instance.new("TextLabel", Frame)
NoClipLabel.Size = UDim2.new(1, 0, 0.2, 0)
NoClipLabel.Position = UDim2.new(0, 0, 0.8, 0)
NoClipLabel.TextScaled = true
NoClipLabel.TextColor3 = Color3.new(0, 1, 0)
NoClipLabel.BackgroundTransparency = 1
NoClipLabel.Text = "✅ NoClip: ON"

-- 🔍 Tìm trái ác quỷ
local function FindFruits()
    for _, fruit in pairs(game.Workspace:GetChildren()) do
        if fruit:IsA("Tool") and string.find(fruit.Name, "Fruit") then
            return fruit
        end
    end
    return nil
end

-- 📍 Dịch chuyển đến vị trí
local function TeleportToPosition(position)
    LocalPlayer.Character.HumanoidRootPart.CFrame = position
end

-- 🔄 Chuyển Server
local function SwitchServer()
    StatusLabel.Text = "🌐 Đang tìm server mới..."
    wait(2)
    
    local servers = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/2753915549/servers/Public?sortOrder=Asc&limit=100"))
    for _, server in pairs(servers.data) do
        if server.playing < server.maxPlayers then
            TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id, LocalPlayer)
            return
        end
    end
end

-- 🔁 Vòng lặp kiểm tra và nhặt trái
while true do
    local fruit = FindFruits()
    if fruit then
        StatusLabel.Text = "🍏 Đã tìm thấy trái ác quỷ! Đang nhặt..."
        TeleportToPosition(fruit.Handle.CFrame)
        wait(2)
        
        local backpack = LocalPlayer.Backpack
        for _, item in pairs(backpack:GetChildren()) do
            if string.find(item.Name, "Fruit") then
                game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("StoreFruit", item.Name)
                StatusLabel.Text = "✅ Trái đã lưu trữ! Không còn trái nào."
                wait(5)
                SwitchServer()
            end
        end
    else
        StatusLabel.Text = "❌ Không có trái ác quỷ! Chuyển server sau 5 giây..."
        wait(5)
        SwitchServer()
    end
end
