repeat wait() until game:IsLoaded()

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local VirtualUser = game:GetService("VirtualUser")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

-- ğŸ”„ğŸ‡ Cháº·n AFK
LocalPlayer.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

-- ğŸ´ Tá»± Ä‘á»™ng chá»n Háº£i Táº·c khi vÃ o game
if game.PlaceId == 2753915549 or game.PlaceId == 4442272183 or game.PlaceId == 7449423635 then
    local args = { [1] = "SetTeam", [2] = "Pirates" }
    ReplicatedStorage.Remotes.CommF_:InvokeServer(unpack(args))
    wait(1)
    ReplicatedStorage.Remotes.CommF_:InvokeServer("TeleportToSpawn")
end

-- ğŸ“Œ Táº¡o UI vÃ  hiá»ƒn thá»‹ trÃªn mÃ n hÃ¬nh
local function CreateUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "PlowHubUI"
    screenGui.Parent = game.Players.LocalPlayer:FindFirstChild("PlayerGui") or game.CoreGui

    local Frame = Instance.new("Frame", screenGui)
    Frame.Size = UDim2.new(0, 300, 0, 150)
    Frame.Position = UDim2.new(0.5, -150, 0.05, 0)
    Frame.BackgroundColor3 = Color3.new(0, 0, 0)
    Frame.BackgroundTransparency = 0.3
    Frame.BorderSizePixel = 2

    -- ğŸŒ TiÃªu Ä‘á» UI
    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1, 0, 0.2, 0)
    Title.TextScaled = true
    Title.TextColor3 = Color3.fromRGB(173, 216, 230)
    Title.BackgroundTransparency = 1
    Title.Text = "ğŸŒ Plow Game | Community"

    -- ğŸ” Tráº¡ng thÃ¡i trÃ¡i Ã¡c quá»·
    local StatusLabel = Instance.new("TextLabel", Frame)
    StatusLabel.Size = UDim2.new(1, 0, 0.4, 0)
    StatusLabel.Position = UDim2.new(0, 0, 0.25, 0)
    StatusLabel.TextSize = 18
    StatusLabel.TextColor3 = Color3.new(1, 1, 1)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.Text = "ğŸ” Äang kiá»ƒm tra trÃ¡i Ã¡c quá»·..."

    -- ğŸ¯ FPS Counter
    local FpsLabel = Instance.new("TextLabel", Frame)
    FpsLabel.Size = UDim2.new(1, 0, 0.15, 0)
    FpsLabel.Position = UDim2.new(0, 0, 0.8, 0)
    FpsLabel.TextSize = 16
    FpsLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    FpsLabel.BackgroundTransparency = 1
    FpsLabel.Text = "FPS: 60"

    -- ğŸ¯ Cáº­p nháº­t FPS theo thá»i gian thá»±c
    RunService.RenderStepped:Connect(function()
        local fps = math.floor(1 / RunService.RenderStepped:Wait())
        FpsLabel.Text = "FPS: " .. fps
    end)

    return StatusLabel
end

-- ğŸ“Œ Khá»Ÿi táº¡o UI
local StatusLabel = CreateUI()

-- ğŸ” TÃ¬m trÃ¡i Ã¡c quá»· nhanh hÆ¡n
local function FindFruits()
    for _, fruit in pairs(game.Workspace:GetChildren()) do
        if fruit:IsA("Tool") and string.find(fruit.Name, "Fruit") then
            return fruit
        end
    end
    return nil
end

-- ğŸ“ Dá»‹ch chuyá»ƒn Ä‘áº¿n trÃ¡i
local function TeleportToPosition(position)
    if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        LocalPlayer.Character.HumanoidRootPart.CFrame = position
    end
end

-- âœ… LÆ°u trá»¯ trÃ¡i vÃ o kho
local function StoreFruit(fruitName)
    ReplicatedStorage.Remotes.CommF_:InvokeServer("StoreFruit", fruitName)
    StatusLabel.Text = "âœ… ÄÃ£ lÆ°u trá»¯ trÃ¡i " .. fruitName .. "!"
end

-- ğŸŒ **TÃ¬m Server cÃ³ trÃ¡i Ã¡c quá»· nhanh hÆ¡n**
local function FastFindServerWithFruit()
    StatusLabel.Text = "ğŸ” Äang tÃ¬m server cÃ³ trÃ¡i Ã¡c quá»·..."
    local bestServer = nil
    local servers = HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/2753915549/servers/Public?sortOrder=Asc&limit=100")).data

    for _, server in ipairs(servers) do
        if server.playing < server.maxPlayers then
            print("ğŸ› ï¸ Kiá»ƒm tra nhanh server: " .. server.id)
            local success, response = pcall(function()
                return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/2753915549/servers/Public/" .. server.id))
            end)
            
            if success and response then
                if response.hasFruit then
                    bestServer = server.id
                    break
                end
            end
        end
    end

    if bestServer then
        StatusLabel.Text = "ğŸ Server cÃ³ trÃ¡i! Äang vÃ o..."
        TeleportService:TeleportToPlaceInstance(game.PlaceId, bestServer, LocalPlayer)
    else
        StatusLabel.Text = "ğŸš« KhÃ´ng tÃ¬m tháº¥y server cÃ³ trÃ¡i!"
    end
end

-- ğŸ” **TÄƒng tá»‘c tÃ¬m & nháº·t trÃ¡i**
while true do
    local fruit = FindFruits()
    if fruit then
        StatusLabel.Text = "ğŸ ÄÃ£ tÃ¬m tháº¥y trÃ¡i Ã¡c quá»·!"
        TeleportToPosition(fruit.Handle.CFrame)
        wait(1)

        -- ğŸ† Nháº·t trÃ¡i & lÆ°u vÃ o kho
        LocalPlayer.Character.Humanoid:EquipTool(fruit)
        wait(1)
        StoreFruit(fruit.Name)

        -- â³ Chuyá»ƒn server má»›i nhanh hÆ¡n
        wait(3)
        FastFindServerWithFruit()
    else
        StatusLabel.Text = "âŒ KhÃ´ng cÃ³ trÃ¡i! Äang tÃ¬m server cÃ³ fruit..."
        FastFindServerWithFruit()
    end
end
